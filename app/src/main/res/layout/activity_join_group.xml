<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fatel.mamtv1.JoinGroupActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cardview_bg">
    <android.support.v7.widget.CardView
        card_view:cardElevation="5dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ><RelativeLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_centerHorizontal="true">

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/codegroup"
            android:text="รหัสกลุ่ม : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_weight="5"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="โปรดใส่รหัส"
            android:inputType="number"
            android:maxLength="4"
            app:bootstrapSize="md"
            app:roundedCorners="true"
            app:bootstrapBrand="info"
            />

    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_below="@+id/l2"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/crtbtn"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/creatbtn"
        android:text="เข้าร่วมกลุ่ม"
        app:bootstrapBrand="primary"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:onClick="joinGroup"
        />



  </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
