<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.fatel.mamtv1..HelpFragment">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.fatel.mamtv1.AlarmFragment">

<LinearLayout
    android:id="@+id/start_blk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="25dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="เวลาทำงาน"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เริ่มต้น"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/start_hr"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/start_min"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="10dp"
            />

        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/start_AP"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="10dp"

            />
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:id="@+id/finish_blk"
    android:layout_below="@+id/start_blk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="สิ้นสุด"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/fin_hr"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/fin_min"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="20dp"
            />

        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/fin_AP"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="20dp"
            />
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:id="@+id/day_blk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_below="@id/finish_blk">
    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันทำงาน"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/chkboxSun"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="อา."
            />
        <CheckBox
            android:id="@+id/chkboxMon"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="จ."
            android:layout_marginLeft="10dp" />
        <CheckBox
            android:id="@+id/chkboxTue"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="อ."
            android:layout_marginLeft="10dp" />
        <CheckBox
            android:id="@+id/chkboxWed"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="พ."
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/chkboxThu"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="พฤ."
            />
        <CheckBox
            android:id="@+id/chkboxFri"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="ศ."
            android:layout_marginLeft="10dp" />
        <CheckBox
            android:id="@+id/chkboxSat"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="ส."
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chkboxDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เลือกทุกวัน" />

    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:id="@+id/seq_blk"
    android:layout_below="@+id/day_blk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ความถี่ในการแจ้งเตือน"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/frq_min"
            android:spinnerMode="dropdown"
            android:dropDownSelector="@drawable/btn_dropdown"
            android:dropDownWidth="wrap_content"
            android:drawablePadding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="นาที"
            android:textColor="#000000"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/mode_blk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/seq_blk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="หมวดท่าบริหาร"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkboxM1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="คอ"
                />
            <CheckBox
                android:id="@+id/chkboxM2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="ไหล่"
                android:layout_marginLeft="10dp" />
            <CheckBox
                android:id="@+id/chkboxM3"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:text="อก และหลัง"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/chkboxM4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="ข้อมือ"
                />
            <CheckBox
                android:id="@+id/chkboxM5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="เอว"
                android:layout_marginLeft="10dp" />
            <CheckBox
                android:id="@+id/chkboxM6"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:text="สะโพก ขา และน่อง"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkboxMA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลือกทุกส่วน" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/onoff">
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เปิดเสียงเตือน"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Switch
        android:id="@+id/mySwitch"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/txt" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mode_blk"
        android:id="@+id/btn"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <Button
            android:text="บันทึก"
            android:gravity="center"
            android:textColor="#FFF5F5"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/buttonshape3"
            android:shadowColor="#919191"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:id="@+id/buttonSet"
            android:textStyle="bold"
            android:layout_below="@id/mode_blk" />

        <Button
             android:id="@+id/reset"
            android:layout_width="150dp"
             android:layout_height="40dp"
             android:layout_gravity="center"
             android:background="@drawable/buttonshape3"
            android:layout_below="@+id/buttonSet"
            android:layout_centerHorizontal="true"
            android:text="รีเช็ต"
            android:textColor="#FFF5F5"
            android:shadowColor="#919191"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:singleLine="false"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>