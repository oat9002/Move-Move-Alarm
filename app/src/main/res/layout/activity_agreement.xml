<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" tools:context="com.fatel.mamtv1.Fragment.AlarmFragment">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Fragment.AlarmFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ความยินยอมในการเปิดเผยข้อมูลโดยวิธีการผ่านระบบอินเตอร์เน็ต"
            android:id="@+id/agreement"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="      ข้าพเจ้าตกลงยินยอมให้แอพพลิเคชั้น Move Alarm เปิดเผยหรือส่งข้อมูล ที่มีการบันทึกในแอพพลิเคชั่นนี้ของข้าพเจ้าแก่กรมอนามัย กระทรวงสาธารณสุข ซึ่งเป็นหน่วยงานราชการ ผ่านระบบอินเตอร์เน็ต โดยข้อมูลดังกล่าวจะไม่มีการระบุตัวบุคคล เลขที่บัตรประชาชน ชื่อ-นามสกุลของท่านแต่อย่างใด ทั้งนี้เพื่อประโยชน์ในการวิเคราะห์ สถานะสุขภาพประชาชน รวมทั้งเพื่อประโยชน์ในการนำไปทบทวนองค์ความรู้ด้านสุขภาพที่จะนำไปเผยแพร่ให้ประชาชนคนไทย  ให้เกิดการสร้างเสริมสุขภาพและป้องกันความเสี่ยงด้านสุขภาพตามภารกิจของกรมอนามัย กระทรวงสาธารณสุข และให้ถือว่าการ คลิกปุ่ม &quot;ตกลง&quot; ด้านล่างคำยินยอมนี้เป็นหลักฐานในการให้ความยินยอมของข้าพเจ้า"
            android:id="@+id/agree_detail"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/agreement"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/agree_detail"
            android:layout_centerHorizontal="true">

            <com.beardedhen.androidbootstrap.BootstrapButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:text="ยอมรับ"
                android:gravity="center"
                android:textColor="#FFF5F5"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:shadowColor="#919191"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:id="@+id/buttonSet"
                android:textStyle="bold"
                android:layout_below="@id/mode_blk"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/reset"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_below="@+id/buttonSet"
                android:layout_centerHorizontal="true"
                android:text="ยกเลิก"
                android:textColor="#FFF5F5"
                android:shadowColor="#919191"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:singleLine="false"
                android:textStyle="bold"
                android:textSize="20sp"
                app:bootstrapBrand="danger"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>