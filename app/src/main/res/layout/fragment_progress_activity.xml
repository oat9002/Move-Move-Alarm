<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="0dp"
        android:fillViewport="true"
        tools:context="com.fatel.mamtv1.ProgressActivityFragment">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:circular="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            tools:context="com.fatel.mamtv1.ProgressActivityFragment"
            xmlns:card_view="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_below="@+id/selec_btn_block">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/title"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="22dp" />


            <com.lylc.widget.circularprogressbar.CircularProgressBar
                android:id="@+id/circularprogressbar2"
                style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                android:layout_width="200dip"
                android:layout_height="200dip"
                circular:cpb_subtitle="accept of activity per day"
                circular:cpb_title="0%"
                android:layout_gravity="center"
                android:layout_below="@+id/title1"
                android:layout_centerHorizontal="true" />
            <com.lylc.widget.circularprogressbar.CircularProgressBar
                android:id="@+id/circularprogressbar3"
                style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                android:layout_width="200dip"
                android:layout_height="200dip"
                circular:cpb_subtitle="accept of activity per week"
                circular:cpb_title="0%"
                android:layout_gravity="center"
                android:layout_below="@+id/circularprogressbar2"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_below="@+id/selec_btn_block">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/title2"
                android:textColor="#222"
                android:textStyle="bold"
                android:textSize="22dp" />

            <LinearLayout android:id="@+id/Time_block"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ttTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="18dp"
                    android:text="@string/totalTime"/>
                <TextView
                    android:id="@+id/timeFraction"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout android:id="@+id/Progress_block"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Time_block"
                android:orientation="horizontal">
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:id="@+id/barTime"
                    android:layout_margin="17dp"
                    android:progressDrawable="@drawable/green_progress"
                    />
            </LinearLayout>

            <LinearLayout android:id="@+id/Time_block1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Progress_block"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ttTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="18dp"
                    android:text="เวลาที่ออกกำลังกายต่อสัปดาห์"/>
                <TextView
                    android:id="@+id/timeFraction1"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="#222"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout android:id="@+id/Progress_block1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Time_block1"
                android:orientation="horizontal">
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:id="@+id/barTime1"
                    android:layout_margin="17dp"
                    android:progressDrawable="@drawable/green_progress"
                    />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>