 <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.ProfileFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBEBEB">
<android.support.v7.widget.CardView
    android:id="@+id/cardview_profile_image"
    card_view:cardElevation="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_bg">
    <com.beardedhen.androidbootstrap.BootstrapThumbnail
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        />
        <!--app:hasBorder="true"-->
        <!--app:bootstrapBrand="primary"-->
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardview_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/cardview_profile_image"
        card_view:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_bg_gray">
        <TextView
            android:id="@+id/header_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/text_background"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:text="ข้อมูลส่วนตัว"/>
    <LinearLayout
        android:id="@+id/proFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_profile"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textFB"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="ชื่อ"/>
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
        <TextView
            android:id="@+id/editFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/probirthday"
        android:layout_below="@+id/proFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
   <TextView
       android:id="@+id/textbirthday"
       android:paddingLeft="30dp"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="#808080"
       android:text="วันเกิด"/>
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
    <TextView
        android:id="@+id/editbirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#808080"
        android:text="-"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/proage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/probirthday"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textage"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="อายุ"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
        <TextView
            android:id="@+id/editage"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="-"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="ปี"
            android:layout_marginLeft="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/proheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proage"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textheight"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="ส่วนสูง"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
        <TextView
            android:id="@+id/editheight"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="-"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="เซนติเมตร"
            android:maxLines="1"
            android:layout_marginLeft="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/proweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proheight"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textweight"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="น้ำหนัก"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
        <TextView
            android:id="@+id/editweight"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="-"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="กิโลกรัม"
            android:maxLines="1"
            android:layout_marginLeft="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/prowaistline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proweight"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textwaistline"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="รอบเอว"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
        <TextView
            android:id="@+id/editwaistline"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="-"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="นิ้ว"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/probmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prowaistline"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textbmi"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="BMI"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text=":"/>
        <TextView
            android:id="@+id/editbmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#808080"
            android:text="-"/>

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/probmi"
            android:text=" "/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
            <com.beardedhen.androidbootstrap.BootstrapButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/edit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:layout_below="@+id/cardview_profile_info"
                android:layout_centerHorizontal="true"
                android:nestedScrollingEnabled="false"
                android:layout_margin="20dp"
                app:bootstrapBrand="primary"
                app:bootstrapText="แก้ไข"
                app:buttonMode="regular"
                app:roundedCorners="true"/>
</RelativeLayout>
    </ScrollView>