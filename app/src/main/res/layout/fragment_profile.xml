<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment"
    android:padding="5dp">

<android.support.v7.widget.CardView
    android:id="@+id/cardview_profile_image"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    card_view:cardElevation="5dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_p"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/test"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/cardview_profile_image"
        card_view:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/proFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textFB"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="ชื่อ"/>
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
        <TextView
            android:id="@+id/editFB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/probirthday"
        android:layout_below="@+id/proFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
   <TextView
       android:id="@+id/textbirthday"
       android:paddingLeft="30dp"
       android:layout_width="100dp"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:textColor="@android:color/black"
       android:text="วันเกิด"/>
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
    <TextView
        android:id="@+id/editbirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="-"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/proage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/probirthday"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textage"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="อายุ"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
        <TextView
            android:id="@+id/editage"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="-"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="ปี"
            android:layout_marginLeft="40dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/proheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proage"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textheight"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="ส่วนสูง"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
        <TextView
            android:id="@+id/editheight"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="-"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="เซนติเมตร"
            android:layout_marginLeft="40dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/proweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proheight"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textweight"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="น้ำหนัก"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
        <TextView
            android:id="@+id/editweight"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="-"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="กิโลกรัม"
            android:layout_marginLeft="40dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/prowaistline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/proweight"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textwaistline"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="รอบเอว"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
        <TextView
            android:id="@+id/editwaistline"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="-"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="นิ้ว"
            android:layout_marginLeft="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/probmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prowaistline"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/textbmi"
            android:paddingLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="BMI"
            />
        <TextView
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text=":"/>
        <TextView
            android:id="@+id/editbmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="-"/>

    </LinearLayout>

    <Button
        android:id="@+id/edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/selectoredit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="false"
        android:layout_margin="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/probmi"
            android:text=" "/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
