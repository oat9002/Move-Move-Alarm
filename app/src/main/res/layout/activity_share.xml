<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kmitl.movealarm.ShareActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#E6E6E6">
    <ImageView
        android:id="@+id/loading"
        android:layout_width="150dp"
        android:layout_centerInParent="true"
        android:layout_height="150dp"
        android:background="@drawable/iconedt2"/>
<android.support.v7.widget.CardView
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding = "20dp"
        >
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/picture"
            android:layout_margin="10dp"
            android:paddingBottom="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showOutline="true"
            app:bootstrapSize="lg"
            app:bootstrapBrand="warning"
            android:text="รูปภาพของคุณ"
            android:gravity="start|center_vertical"
            android:textStyle="bold"/>
    <ImageView
        android:id="@+id/imgNxtPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <LinearLayout android:id="@+id/btn_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="ยกเลิก"
            android:textColor="#FFF5F5"
            android:shadowColor="#919191"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:singleLine="false"
            app:bootstrapBrand="danger"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:id="@+id/btn_cancel"
            android:onClick="linkHome"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cardview_time_left"
            />


        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_share"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="linkHome"
            android:background="@drawable/sharef"/>
    </LinearLayout>


</RelativeLayout>
